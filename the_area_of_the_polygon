#include <iostream>
#include <cmath>   // Для функции abs()
#include <vector>  // Для использования векторов

using namespace std;

int main() {
    int n;
    cout << "Введите количество вершин многоугольника: ";
    cin >> n;

    // Многоугольник должен иметь минимум 3 вершины
    if (n < 3) {
        cout << "Ошибка: многоугольник должен иметь хотя бы 3 вершины." << endl;
        return 1;  // Завершаем программу с кодом ошибки
    }

    // Векторы для хранения координат вершин
    vector<double> x(n), y(n);

    // Ввод координат для каждой вершины
    for (int i = 0; i < n; ++i) {
        cout << "Введите координаты вершины " << i + 1 << " (x y): ";
        cin >> x[i] >> y[i];
    }

    // Вычисление площади по формуле площади Гаусса
    double area = 0.0;
    for (int i = 0; i < n; ++i) {
        int next = (i + 1) % n;  // Индекс следующей вершины (с замыканием на первую)
        // Суммируем разности произведений координат
        area += (x[i] * y[next] - x[next] * y[i]);
    }

    // Берем абсолютное значение и делим пополам
    area = abs(area) / 2.0;
    cout << "Площадь многоугольника: " << area << endl;

    return 0;
}
