#include <iostream>
#include <cmath>
#include <vector>

using namespace std;

int main() {
    int n;
    cout << "Введите количество вершин многоугольника: ";
    cin >> n;

    if (n < 3) {
        cout << "Ошибка: многоугольник должен иметь хотя бы 3 вершины." << endl;
        return 1;
    }

    vector<double> x(n), y(n);

    for (int i = 0; i < n; ++i) {
        cout << "Введите координаты вершины " << i + 1 << " (x y): ";
        cin >> x[i] >> y[i];
    }

    double area = 0.0;
    for (int i = 0; i < n; ++i) {
        int next = (i + 1) % n;
        area += (x[i] * y[next] - x[next] * y[i]);
    }

    area = abs(area) / 2.0;
    cout << "Площадь многоугольника: " << area << endl;

    return 0;
}
